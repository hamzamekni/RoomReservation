<body>
    <%- include('../navbar') %>
    <div class="container">
        <h1 class="text-center">User Bookings</h1>
        <div id='calendar'></div>
        <script src='https://cdn.jsdelivr.net/npm/fullcalendar/index.global.min.js'></script>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const eventsData = JSON.parse('<%- events %>'); // Embed events data directly
                console.log(eventsData)
                const calendarEl = document.getElementById('calendar');
                if (calendarEl && eventsData) {
                    const calendar = new FullCalendar.Calendar(calendarEl, {
                        initialView: 'dayGridMonth',
                        events: eventsData.map(event => ({
                            title: event.title,
                            start: event.start,
                            end: event.end,
                            id: event.id // Add id property to uniquely identify each event
                        })),
                        eventClick: function(info) {
                            if (confirm('Are you sure you want to cancel this reservation?')) {
                                const eventId = info.event.id; // Access _id from extendedProps
                                fetch(`/cancelReservation/${eventId}`, {
                                    method: 'DELETE'
                                })
                                .then(response => {
                                    if (response.ok) {
                                        calendar.getEventById(eventId).remove(); // Remove the event from the calendar
                                        alert('Reservation canceled successfully');
                                    } else {
                                        alert('Failed to cancel reservation. Please try again.');
                                    }
                                })
                                .catch(error => {
                                    console.error('Error occurred while canceling reservation:', error);
                                    alert('An error occurred. Please try again.');
                                });
                            }
                        }
                    });
                    calendar.render();
                } else {
                    console.error('Calendar element or events data is missing.');
                }
            });
        </script>
    </div>

